<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:id="@+id/svInfo">
        <LinearLayout
            android:layout_weight="2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:id="@+id/barcodeNumber"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:text="바코드 번호 : 인식된 값"
                android:textSize="30sp"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginBottom="5dp"
                android:text="상품명 : 코리안넷에서 받아온값"
                android:textSize="30sp"
                />
            <TableLayout
                android:background="#00FFAA"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:stretchColumns="*">
                <View
                    android:layout_height="1dp"
                    android:layout_width="match_parent"/>
                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="1dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="상품명"
                        android:textColor="#0000FF"
                        android:gravity="center">
                    </TextView>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="가격"
                        android:textColor="#0000FF"
                        android:gravity="center"
                        >
                    </TextView>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="구매링크"
                        android:textColor="#0000FF"
                        android:gravity="center"
                        >
                    </TextView>
                </TableRow>
                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="빠다코코낫"
                        android:textColor="#0000FF"
                        android:gravity="center">
                    </TextView>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="가격"
                        android:textColor="#0000FF"
                        android:gravity="center"
                        >
                    </TextView>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="구매링크"
                        android:textColor="#0000FF"
                        android:gravity="center"
                        >
                    </TextView>
                </TableRow>
            </TableLayout>
        </LinearLayout>

        <TableLayout
            android:stretchColumns="*"
            android:id="@+id/myTableLayout"
            android:background="#00FFAA"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">
            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="상품명"
                    android:textColor="#0000FF"
                    android:gravity="center">
                </TextView>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="가격"
                    android:textColor="#0000FF"
                    android:gravity="center"
                    >
                </TextView>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="구매링크"
                    android:textColor="#0000FF"
                    android:gravity="center"
                    >
                </TextView>
            </TableRow>
        </TableLayout>

        <Button
            android:id="@+id/URIButton"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:text="Url 연결 버튼예제">
        </Button>

    </LinearLayout>

</LinearLayout>